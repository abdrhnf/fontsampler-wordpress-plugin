{
  "name": "fontsampler",
  "version": "0.4.14",
  "description": "WordPress plugin for testing webfonts - Actively maintained fork by Bahasatype",
  "main": "js/main.js",
  "scripts": {
    "test": "npm run lint",
    "build": "node r.js -o build.js",
    "build:admin": "node r.js -o build-admin.js",
    "build:webpack": "webpack --mode production",
    "build:webpack:dev": "webpack --mode development",
    "watch:webpack": "webpack --mode development --watch",
    "less": "lessc css/fontsampler-css.less css/fontsampler-css.css",
    "less-admin": "lessc admin/css/fontsampler-admin.less admin/css/fontsampler-admin.css",
    "lint": "eslint js/**/*.js admin/js/**/*.js --ignore-pattern '*.min.js'",
    "lint:fix": "eslint js/**/*.js admin/js/**/*.js --ignore-pattern '*.min.js' --fix",
    "format": "prettier --write 'js/**/*.js' 'admin/js/**/*.js'"
  },
  "watch": {
    "build": {
      "patterns": "js",
      "ignore": "js/fontsampler.js"
    },
    "build-admin": {
      "patterns": "admin/js",
      "ignore": "admin/js/fontsampler-admin.js"
    },
    "less": {
      "patterns": [
        "css"
      ],
      "extensions": [
        "less"
      ]
    },
    "less-admin": {
      "patterns": [
        "admin/css"
      ],
      "extensions": [
        "less"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abdrhnf/fontsampler-wordpress-plugin.git"
  },
  "author": "Abdurrahman Hanif <abdrhnf@bahasatype.com> (https://bahasatype.com)",
  "contributors": [
    "Johannes Neumeier (https://underscoretype.com)"
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/abdrhnf/fontsampler-wordpress-plugin/issues"
  },
  "homepage": "https://github.com/abdrhnf/fontsampler-wordpress-plugin",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-loader": "^9.2.1",
    "eslint": "^8.57.1",
    "npm-watch": "^0.3.0",
    "prettier": "^3.7.4",
    "terser-webpack-plugin": "^5.3.16",
    "webpack": "^5.104.0",
    "webpack-cli": "^5.1.4"
  }
}